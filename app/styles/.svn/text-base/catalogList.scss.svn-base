.catalogList {
  .thumbnails {
    text-align: center;
  }
  .span3 {
    margin-right: 1%;
    width: 280px;
  }
  .thumbnails > li {
    display: inline-block;
    *display: inline; /* ie7 fix */
    float: none; /* this is the part that makes it work */
  }
  .row {
    margin: auto;
  }
  .span3 a {
    border-radius: 15px 15px 15px 15px;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.5);
    display: block;
    float: left;
    height: 120px;
    margin: 0 10px 0 0;
    width: 280px;
  }
  .span3 a img {
    border-radius: 15px;
  }
  .shadow {
    border-radius: 15px 15px 15px 15px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.50), 0 1px rgba(255, 255, 255, 0.30) inset, 0 4px rgba(255, 255, 255, 0.10) inset, 0 10px 20px rgba(255, 255, 255, 0.10) inset, 0 -15px 30px rgba(0, 0, 0, 0.3) inset;
    display: block;
    float: left;
    height: 123px;
    width: 280px;
    position: fixed;
  }
}

.ec-sub-head {
  color: white;
  text-align: center;
  font-weight: normal;
}

.navbar .nav {
  float: right;
}

.ec-nav-menu {
  padding: 0 10px;
}

.ec-dash-item {
  background-color: rgba(0, 0, 0, .5);
  border-radius: 10px;
}

.ec-dash-item * {
  text-align: center;
}

.ec-dash-item a {
  text-decoration: none;
}

.ec-dash-item .span2 {
  margin-top: 20px;
  margin-bottom: 20px;
}

.ec-dash-item h4 {
  color: white;
}

.ec-cat-item .span12 {
  margin-bottom: 20px;
  text-align: center;
}

.ec-cat-item .span12 img:hover {
  -webkit-box-shadow: 0 8px 6px -6px black;
  -moz-box-shadow: 0 8px 6px -6px black;
  box-shadow: 0 8px 6px -6px black;
}

.ec-promo {
  display: none;
}

.ec-promo.active {
  display: block;
}

.ec-span12-margin {
  margin-left: 0;
  width: 100%;
}

.span3.clickable.ng-scope .shadow {
  border-radius: 15px 15px 15px 15px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5), 0 1px rgba(255, 255, 255, 0.3) inset, 0 4px rgba(255, 255, 255, 0.1) inset, 0 10px 20px rgba(255, 255, 255, 0.1) inset, 0 -15px 30px rgba(0, 0, 0, 0.3) inset;
  display: block;
  float: left;
  height: 95px;
  position: fixed;
  width: 220px;
}

.span3.clickable.ng-scope img {
  border-radius: 15px 15px 15px 15px;
}

@media (min-width: 1200px) {
  .ec-log-item .span3 {
    margin-bottom: 20px;
  }
}

@media (max-width: 980px) {
  .navbar .nav {
    float: right;
  }
  .span3 {
    width: 30%;
  }
}
