bx-slider {
  .bx-wrapper {
    height: 100%;
  }

  ul {
    height: 100%;
    margin: 0px;
  }

  .page-container {
    display: block;
    width: 100%;
    height: 100%;
    position: relative;
    background: none;
    overflow: hidden;
  }

  .slide-loading-screen {
    opacity: 1;
    transition: opacity 1s ease-in;
    position: absolute;
    height: 100%;
    width: 100%;
    z-index: 8;
    top: 0px;
    background-color: #FFF;
    overflow-y: hidden;
    text-align: center;
    img {
      display: inline-block;
      position: relative;
      top: 45%;
    }
  }

  .slide-loading-screen.fade {
    opacity: 0;
    transition: opacity 1s ease-out;
    .slide-loading-message {
      opacity: 0;
      transition: opacity 1s ease-out;
    }
  }
}