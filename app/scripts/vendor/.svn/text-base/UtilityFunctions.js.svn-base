/**
 * The purpose of this literal object is to keep common Utility Functions
 * in order to avoid repeating ourselves.
 *
 */
var UtilityFunctions = {

    guid: function () {
        return s4() + s4() + '-' + s4() + '-' + s4() + '-' +
            s4() + '-' + s4() + s4() + s4();
    }
};

function s4() {
    return Math.floor((1 + Math.random()) * 0x10000).toString(16).substring(1);
};